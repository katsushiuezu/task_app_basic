module ApplicationHelper
  require "uri"
  
  def text_url_to_link(text)
    
    URI.extract(text, ["http", "https"]).uniq.each do |url|
      text.gsub!(url, "#{url}")
    end
    (text, "< a href=\"#{url}\"target=\"_blank\">#{url}")
    <%= text_url_to_link(blog.text).html_safe %>


  end
end


